@model ResetPasswordViewModel

<div class="auth-wrapper form-ui border pt-4">
    <div class="section-title title-wide mb-1 no-after-title-wide">
        <h2 class="font-weight-bold">تغییر رمزعبور</h2>
    </div>
    <form asp-action="UserChangePassword" method="post">
        <div class="form-row-title">
            <h3>رمز عبور جدید </h3>
        </div>
        <div class="form-row with-icon">
            <input asp-for="Password" type="password" class="input-ui pr-2" placeholder="رمزعبور جدید خود را وارد نمایید">
            <i class="mdi mdi-account-circle-outline"></i>
        </div>
        <span class="text-danger" asp-validation-for="Password"></span>
        <div class="form-row-title">
            <h3>تکرار رمزعبور جدید</h3>
        </div>
        <div class="form-row with-icon">
            <input asp-for="RePassword" type="password" class="input-ui pr-2" placeholder="تکرار رمزعبور جدید خودرا وارد نمایید ">
            <i class="mdi mdi-lock-open-variant-outline"></i>
        </div>
        <span class="text-danger" asp-validation-for="RePassword"></span>
        <div class="form-row mt-3">
            <button type="submit" class="btn-primary-cm btn-with-icon mx-auto w-100">
                <i class="mdi mdi-login-variant"></i>
                تغییر رمز عبور
            </button>
        </div>
    </form>
  
</div>