@model RegisterViewModel
<div class="col-xl-4 col-lg-5 col-md-7 col-12 mx-auto" >
  
    <div class="auth-wrapper form-ui border pt-4">
        <div class="section-title title-wide mb-1 no-after-title-wide">
            <h2 class="font-weight-bold">ثبت نام</h2>
        </div>
        @if (ViewBag.account == true)
        {
            <div class="message-light">
                ایمیلی حاوی لینک فعال سازی برای شما ارسال شد لطفا برای ادامه ایمیل خود را چک کنید
            </div>
        }
      
    <form asp-action="Register" method="post">
        <div class="form-row-title">
            <h3>نام کاربری </h3>
        </div>
        <div class="form-row with-icon">
            <input asp-for="UserName" type="text" class="input-ui pr-2" placeholder="نام کاربری خود را وارد نمایید">
            <i class="mdi mdi-account-circle-outline"></i>
        </div>
        <span class="text-danger" asp-validation-for="UserName"></span>
        <div class="form-row-title">
            <h3>ایمیل </h3>
        </div>
        <div class="form-row with-icon">
            <input asp-for="Email" type="text" class="input-ui pr-2" placeholder="ایمیل  خود را وارد نمایید">
            <i class="mdi mdi-email"></i>
        </div>
        <span class="text-danger" asp-validation-for="Email"></span>
        <div class="form-row-title">
            <h3>رمز عبور</h3>
        </div>
        <div class="form-row with-icon">
            <input asp-for="Password" type="password" class="input-ui pr-2" placeholder="رمز عبور خود را وارد نمایید">
            <i class="mdi mdi-lock-open-variant-outline"></i>
        </div>
        <span class="text-danger" asp-validation-for="Password"></span>
        <div class="form-row-title">
            <h3>تکرار رمز عبور</h3>
        </div>
        <div class="form-row with-icon">
            <input asp-for="RePassword" type="password" class="input-ui pr-2" placeholder="تکرار رمز عبور خود را وارد نمایید">
            <i class="mdi mdi-lock-open-variant-outline"></i>
        </div>
        <span class="text-danger" asp-validation-for="RePassword"></span>

        <div class="form-row mt-3">
            <button type="submit" class="btn-primary-cm btn-with-icon mx-auto w-100">
                <i class="mdi mdi-account-circle-outline"></i>
                ثبت نام در دیدیکالا
            </button>
        </div>
    </form>
        <div class="form-footer mt-3">
            <div>
                <span class="font-weight-bold">قبلا ثبت نام کرده اید؟</span>
                <a href="#" class="mr-3 mt-2">وارد شوید</a>
            </div>
        </div>
    </div>
</div>