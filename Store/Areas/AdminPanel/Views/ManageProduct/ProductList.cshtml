@model IEnumerable<Store.Data.Entities.Product.Product>

<div class="app-content content">
    <div class="content-overlay"></div>
    <div class="content-wrapper">
        <div class="content-body">
            <div class="row">
                <div class="col-12"></div>
            </div>
            <!-- Zero configuration table -->
            <section id="basic-datatable">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">لیست محصولات</h4>

                            </div>
                            @if (ViewBag.ErrorForm == true)
                            {
                                <div class="alert alert-danger mb-2" role="alert">
                                    لطفا فیلد های خواسته شده فرم را پر کنید
                                </div>
                            }

                            <div class="card-content">
                                <div class="card-body card-dashboard">
                                    <div class="table-responsive">
                                        <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper dt-bootstrap4">
                                            <div class="row">
                                                <div class="col-sm-12 col-md-10">
                                                    <div class="col-md-10 mb-1">
                                                        <fieldset>
                                                            <form>
                                                                <div class="input-group">
                                                                    <input name="search" class="form-control" placeholder="جستوجوی محصولات" aria-describedby="button-addon2">
                                                                    <div class="input-group-append" id="button-addon2">
                                                                        <button class="btn btn-primary bx bx-search" asp-route-id="@ViewBag.ProductGroup" type="submit" type="button"></button>
                                                                    </div>
                                                                    <div class="input-group-append" id="button-addon2">
                                                                        <a href="/adminpanel/ManageProduct/ProductList/@ViewBag.ProductGroup" class="btn btn-danger bx bxs-x-circle" type="button"></a>
                                                                    </div>


                                                                </div>
                                                            </form>
                                                        </fieldset>
                                                    </div>
                                                </div>
                                            </div>

                                            <form asp-controller="ManageProduct" asp-action="FastCreateProduct" class="row">
                                                <div class="col-lg-3 mb-1">
                                                    <fieldset>
                                                        <div class="input-group">
                                                            <div class="input-group-prepend">
                                                                <span class="input-group-text" id="basic-addon1" dir="ltr"></span>
                                                            </div>
                                                            <input type="text" name="ProductNameF" class="form-control" placeholder="نام محصول به فارسی" aria-describedby="basic-addon1">
                                                        </div>
                                                    </fieldset>
                                                </div>
                                                <div class="col-lg-3 mb-1">
                                                    <fieldset>
                                                        <div class="input-group">
                                                            <div class="input-group-prepend">
                                                                <span class="input-group-text" id="basic-addon1" dir="ltr"></span>
                                                            </div>
                                                            <input type="text" name="ProductNameE" class="form-control" placeholder="نام محصول به انگلیسی" aria-describedby="basic-addon1">
                                                        </div>
                                                    </fieldset>
                                                </div>

                                                <input type="hidden" name="groupid" value="@ViewBag.ProductGroup">

                                                <div class="col-lg-2 mb-1">
                                                    <fieldset>
                                                        <div class="input-group">
                                                            <div class="input-group-prepend">
                                                                <span class="input-group-text">$</span>
                                                            </div>
                                                            <input type="number" name="price" class="form-control" placeholder="قیمت تومان" aria-label="Amount (to the nearest dollar)">

                                                        </div>
                                                    </fieldset>
                                                </div>
                                                <div class="col-lg-2 mb-1">
                                                    <fieldset>
                                                        <div class="input-group-append" id="button-addon2">
                                                            <button class="btn btn-success " type="submit">افزودن محصول</button>
                                                        </div>
                                                    </fieldset>
                                                </div>
                                            </form>


                                            <div class="row">
                                                <div class="col-sm-12">
                                                    <table class="table table-dark mb-0" id="DataTables_Table_0" role="grid" aria-describedby="DataTables_Table_0_info">
                                                        <thead>
                                                            <tr>
                                                                
                                                                <th>@Html.DisplayNameFor(model => model.Id)</th>
                                                                <th>@Html.DisplayNameFor(model => model.EnglishName)</th>
                                                                <th>@Html.DisplayNameFor(model => model.PersianName)</th>
                                                                <th>@Html.DisplayNameFor(model => model.Price)</th>

                                                                <th>ویرایش محصول</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @foreach (var item in Model)
                                                            {
                                                                <tr role="row" class="odd">


                                                         
                                                                    <td>@item.Id</td>
                                                                    <td>@item.EnglishName</td>
                                                                    <td>@item.PersianName</td>
                                                                    <td>@item.Price</td>

                                                                    <td>
                                                                        <a href="/adminpanel/ManageProduct/EditProduct/@item.Id" class="text-info">ویرایش</a>
                                                                    </td>


                                                                </tr>

                                                            }
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-sm-12 col-md-7">
                                                    <div class="dataTables_paginate paging_simple_numbers" id="DataTables_Table_0_paginate">
                                                        <ul class="pagination ">

                                                            <li class="paginate_button page-item next">
                                                                <a href="/adminpanel/ManageProduct/ProductList/@ViewBag.ProductGroup?pageid=1&search=@ViewBag.Productsearchtitle" class=" btn btn-dark round ">صفحه اول</a>
                                                            </li>

                                                            @for (int i = 1; i <= (ViewBag.ProductPageCount); i++)
                                                            {
                                                                <li class=" paginate_button page-item @(((int)ViewBag.ProductPageID==i)?"active":"")">
                                                                    <a href="/adminpanel/ManageProduct/ProductList/@ViewBag.ProductGroup?pageid=@i&search=@ViewBag.Productsearchtitle" class="page-link ">@i</a>
                                                                </li>
                                                            }
                                                            <li class="paginate_button page-item next">
                                                                <a href="/adminpanel/ManageProduct/ProductList/@ViewBag.ProductGroup?pageid=@(ViewBag.ProductPageCount)&search=@ViewBag.Productsearchtitle" class="btn btn-dark round ">صفحه اخر</a>
                                                            </li>

                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
