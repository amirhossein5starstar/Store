@using Store.Data.Entities.Product
@model AdminCreateProductGroup



<div class="app-content content">
    <div class="content-overlay"></div>
    <div class="content-wrapper">
        <div class="content-header row">
            <div class="content-header-left col-12 mb-2 mt-1">
                <div class="row breadcrumbs-top">
                    <div class="col-12">
                        <h5 class="content-header-title float-left pr-1">طرح های فرم</h5>
                        <div class="breadcrumb-wrapper">
                            <ol class="breadcrumb p-0 mb-0">
                                <li class="breadcrumb-item">
                                    <a href="index.html"><i class="bx bx-home-alt"></i></a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="#">فرم ها</a>
                                </li>
                                <li class="breadcrumb-item active">
                                    <a href="#">طرح های فرم</a>
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="content-body">
            <!-- Basic Horizontal form layout section start -->
            <section >
                <div class="row ">
                    <div class="col-md-6 col-12" >
                        <div class="card" >
                            <div class="card-header">
                                <h4 class="card-title">افزودن گروه محصولات</h4>
                            </div>
                            <div class="card-content">
                                <div class="card-body">
                                    <form asp-controller="ManageProduct" asp-action="ProductGroup" method="post">
                                        <input asp-for="Title" class="form-control" type="text" />
                                        <span asp-validation-for="Title"></span>
                                        <button class="btn btn-primary" type="submit">افزودن</button>
                                    </form>
                                  
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-12">
                        <div class="card" style="">
                            <div class="card-header badge-circle-light-success">
                                <h4 class="card-title ">گروه ها</h4>
                            </div>
                            <ul class="list-group">
                                @if (ViewData["productGroupList"] != null)
                                {
                                    @foreach (var item in   (List<ProductGroup>) ViewData["productGroupList"])
                                    {
                                        <li  class="list-group-item d-flex justify-content-between align-items-center">
                                            <a href="#" class="btn btn-outline-info round mr-1 mb-1 " style="margin-top: 4%">لیست محصولات </a>
                                            <span> @item.Title</span>
                                            <input id="ass" type="hidden" value="@item.Id" />
                                           
                                                <a href="/AdminPanel/ManageProduct/DeleteGroup/@item.Id" class="btn btn-danger bx bx-trash">  
                                                </a>
                                            
                                        </li>
                                    }
                                }
                                else
                                {
                                    <h3 class="badge-circle-light-info">هیچ گروهی برای نمایش وجود ندارد</h3>
                                }


                            </ul>
                        </div>
                    </div>
                </div>
            </section>

        </div>
    </div>
</div>










