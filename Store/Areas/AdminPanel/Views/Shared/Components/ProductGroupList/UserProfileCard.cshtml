@using Store.Data.Entities.Product
@model List<Store.Data.Entities.Product.ProductGroup>

        <div class="card" style="">
            <div class="card-header badge-circle-light-success">
                <h4 class="card-title ">گروه ها</h4>
            </div>
            <ul class="list-group">
                @if (ViewData["productGroupList"] != null)
                {
                @foreach (var item in   (List
                <ProductGroup>
                    ) ViewData["productGroupList"])
                    {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <a href="/adminpanel/ManageProduct/ProductList/@item.Id" class="btn btn-outline-info round mr-1 mb-1 " style="margin-top: 4%">لیست محصولات </a>
                        <span> @item.Title</span>
                        <input  type="hidden" value="@item.Id" />

                        <a href="/AdminPanel/ManageProduct/DeleteGroup/@item.Id" class="btn btn-danger bx bx-trash">
                        </a>

                    </li>
                    }
                    }
                    else
                    {
                    <h3 class="badge-circle-light-info">هیچ گروهی برای نمایش وجود ندارد</h3>
                    }
            </ul>
        </div>
    

    
